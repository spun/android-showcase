<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spundev.spun.androidshowcase">

    <uses-permission android:name="android.permission.CAMERA" />

    <!-- [START gcm_permission] -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- [END gcm_permission] -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.spundev.spun.androidshowcase.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spundev.spun.androidshowcase.HeadphoneReceiverActivity"
            android:label="@string/title_activity_headphone_receiver"
            android:parentActivityName="com.spundev.spun.androidshowcase.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spundev.spun.androidshowcase.MainActivity" />
        </activity>
        <activity
            android:name="com.spundev.spun.androidshowcase.PaletteActivity"
            android:label="@string/title_activity_palette"
            android:parentActivityName="com.spundev.spun.androidshowcase.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spundev.spun.androidshowcase.MainActivity" />
        </activity>
        <activity
            android:name="com.spundev.spun.androidshowcase.SensorsActivity"
            android:label="@string/title_activity_sensors"
            android:parentActivityName="com.spundev.spun.androidshowcase.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spundev.spun.androidshowcase.MainActivity" />
        </activity>
        <activity
            android:name="com.spundev.spun.androidshowcase.BarcodeScannerActivity"
            android:label="@string/title_activity_barcode_scanner"
            android:parentActivityName="com.spundev.spun.androidshowcase.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spundev.spun.androidshowcase.MainActivity" />
        </activity>
        <activity
            android:name="com.spundev.spun.androidshowcase.RecyclerActivity"
            android:label="@string/title_activity_recycler"
            android:parentActivityName="com.spundev.spun.androidshowcase.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spundev.spun.androidshowcase.MainActivity" />
        </activity>
        <activity
            android:name="com.spundev.spun.androidshowcase.DesignLibraryActivity"
            android:label="@string/title_activity_design_library"
            android:parentActivityName="com.spundev.spun.androidshowcase.MainActivity"
            android:theme="@style/AppThemeNoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spundev.spun.androidshowcase.MainActivity" />
        </activity>
        <activity
            android:name="com.spundev.spun.androidshowcase.IntentFilterActivity"
            android:label="@string/title_activity_intent_filter"
            android:parentActivityName="com.spundev.spun.androidshowcase.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*.youtube.com"
                    android:pathPrefix="/watch"
                    android:scheme="http" />
                <data
                    android:host="*.youtube.com"
                    android:pathPrefix="/watch"
                    android:scheme="https" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spundev.spun.androidshowcase.MainActivity" />
        </activity>

        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.example.spun.androidshowcase" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->


        <!-- [START gcm_listener] -->
        <service
            android:name="com.spundev.spun.androidshowcase.gcm.MyGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->


        <!-- [START instanceId_listener] -->
        <service
            android:name="com.spundev.spun.androidshowcase.gcm.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->

        <service
            android:name="com.spundev.spun.androidshowcase.gcm.RegistrationIntentService"
            android:exported="false" />

        <activity
            android:name="com.spundev.spun.androidshowcase.MediaPlayerActivity"
            android:label="@string/title_activity_media_player"
            android:parentActivityName="com.spundev.spun.androidshowcase.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spundev.spun.androidshowcase.MainActivity" />
        </activity>

        <service android:name="com.spundev.spun.androidshowcase.MediaPlayerService" />
    </application>

</manifest>
